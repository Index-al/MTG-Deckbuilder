<main>
  <section class="deck-builder">
    <h2 id="deck-name-display"></h2>
    
    <div id="import-export-controls" style="display: none;">
      <button id="export-deck-button">Export Deck</button>
      <button id="import-deck-button">Import Deck</button>
      <textarea id="import-deck-textarea" placeholder="Paste your deck list here..." style="display: none; width: 100%; height: 200px;"></textarea>
      <button id="submit-import-button" style="display: none;">Submit Import</button>
    </div>

    <div id="top-controls" style="display: none;">
      <button id="save-deck-button">Save Deck</button>
      <button id="delete-deck-button">Delete Deck</button>
    </div>
    <div class="deck-search-bar" id="deck-controls">
      <form id="deck-selector-form">
        <select id="deck-selector">
          <option value="">Select a Deck</option>
          <!-- Options will be dynamically populated -->
        </select>
        <button type="button" id="load-deck-button">Load Deck</button>
      </form>
      <form id="new-deck-form">
        <input type="text" id="new-deck-name" placeholder="New Deck Name">
        <button type="submit">Create New Deck</button>
      </form>
    </div>

    <div class="deck-search-bar" id="card-search-container" style="display: none;">
      <form id="card-search-form">
        <input type="text" id="deck-search-input" placeholder="Search for cards to add...">
        <button type="submit">Add Card</button>
      </form>
    </div>

    <div class="deck-list" id="deck-list-container" style="display: none;">
      <h2>Your Deck</h2>
      <div id="deck-view" class="deck-view">
        <!-- Card stacks will be dynamically added here -->
      </div>
    </div>
  </section>
</main>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/deck-builder.js"></script>
