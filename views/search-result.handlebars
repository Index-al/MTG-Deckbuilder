<body>
<div>
  <b><big>Found {{cardData.length}} results.</big></b>
</div>

  <div class="results-exp">Click on a card to view more details or click the + button to add it to your clipboard.</div>

	<div class="columns is-flex-wrap-wrap">
		{{#each cardData as |card|}}
			<div class="column is-3 card-container">
				<a href="/search/{{sanitizeCardName card.name}}" class="box">
					{{#if card.card_faces}}
						<img src="{{card.card_faces.[0].image_uris.normal}}" alt="{{card.name}}" />
						<img src="{{card.card_faces.[1].image_uris.normal}}" alt="{{card.name}}" class="card-face back" style="display: none;" />
						<button
						class="flip-card"
						onclick="flipCard()"
						>â¤´</button>
					{{else}}
						<img src="{{card.image_uris.normal}}" />
					{{/if}}

					{{! Add to clipboard button }}
					<button
						class="add-to-clipboard-search"
						data-card-name="{{card.name}}"
					>+</button>
				</a>
			</div>
		{{/each}}
	</div>
</body>